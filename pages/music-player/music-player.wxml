<!--pages/music-player/music-player.wxml-->
<!-- 1.背景展示 -->
<image class="bg-image" src="{{currentSong.al.picUrl}}" mode="aspectFill"></image>
<view class="bg-cover"></view>

<!-- 2.自定义导航栏 -->
<nav-bar>
	<view class="tabs" slot='center'>
		<block wx:for="{{pageTitles}}" wx:key="*this">
			<view
				class="item {{currentPage === index ? 'active' : ''}}"
				bindtap="onNavTabItemTap"
				data-index="{{index}}"
			>
				{{item}}
			</view>
			<view class="divider" wx:if="{{index !== pageTitles.length - 1}}">|</view>
		</block>
	</view>
</nav-bar>

<!-- 具体内容 -->
<swiper
	bindchange="onSwiperChange"
	style="height: {{contentHeight}}px"
	current="{{currentPage}}"
>
	<swiper-item class="music">
		<view class="album">
			<image
				class="image"
				src="{{currentSong.al.picUrl}}"
				mode="widthFix"
			/>
		</view>
		<view class="info">
			歌曲信息
		</view>
		<view class="lyric">
			一句歌词
		</view>
		<view class="progress">
			歌曲的进度和时长
		</view>
		<view class="control">
			歌曲控制
		</view>
	</swiper-item>

	<swiper-item>歌词</swiper-item>
</swiper>
