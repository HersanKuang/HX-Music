/* pages/main-music/main-music.wxss */
page {
	--search-background-color: #fff;
	--search-padding: 10px 0;

	box-sizing: border-box;
	padding: 0 24rpx;
	background-color: #fafafa;
}

/* 轮播图样式 */
.banner {
	border-radius: 12rpx;
	overflow: hidden;
	/* height: 260rpx; */
}
.banner .item .banner-image {
	width: 100%;
}

/* 歌单样式 */
.hot-list {
	/* flex布局 padding-right会被吞掉 */
	/* display: flex; */
	margin-left: -24rpx;
	white-space: nowrap;
}

.hot-list .item {
	/* flex-shrink: 0; */
	display: inline-block;
	width: 220rpx;
	margin-left: 24rpx;
}

.hot-list .item:last-child {
	margin-right: 24rpx;
}
